# API Keys (priority: Replicate -> OpenAI -> Test Mode)
REPLICATE_API_TOKEN=your_replicate_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=us-east-1

# Test Mode (set to true to avoid API calls)
TEST_MODE=true

# Model Configuration
MODEL_TYPE=langchain_openai
LANGCHAIN_MODEL_NAME=gpt-4-vision-preview
LANGCHAIN_TEMPERATURE=0.7
LANGCHAIN_MAX_TOKENS=1000

# Application Settings
LOG_LEVEL=INFO
CACHE_TTL=3600
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Image Processing
MAX_IMAGE_SIZE=4194304
ALLOWED_IMAGE_TYPES=jpg,jpeg,png

# Stable Diffusion (if using local model)
STABLE_DIFFUSION_MODEL=stabilityai/stable-diffusion-2-1

# DALL-E Configuration
DALLE_MODEL=dall-e-3